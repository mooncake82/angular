{
    "extends": [
        "tslint:recommended",
        "tslint-sonarts"
    ],
    "defaultSeverity": "warning",
    "rules": {
        "curly": true,
        "class-name": true,
        "arrow-return-shorthand": true,
        "only-arrow-functions": false,
        "comment-format": [
            true,
            "check-space"
        ],
        "draw_white_space": "all",
        "ensure_single_trailing_newline": true,
        "eofline": true,
        "indent": [true, "spaces", 4],
        "forin": true,
        "ignore_whitespace_on_current_line": false,
        "ignore_whitespace_only_lines": false,
        "import-spacing": true,
        "member-access": true,
        "max-line-length": [false],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-static-method",
                    "protected-static-field",
                    "protected-static-method",
                    "private-static-field",
                    "private-static-method",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }

        ],
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace",
            "log"
        ],
        "no-duplicate-super": true,
        "no-empty": true,
        "no-empty-interface": true,
        "one-line": [true, "check-finally", "check-whitespace", "check-open-brace"],
        "no-misused-new": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-duplicate-switch-case": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "no-var-keyword": true,
        "object-literal-sort-keys": false,
        "no-require-imports": true,
        "ordered-imports": false,
        "no-boolean-literal-compare": true,
        "space-within-parens": true,
        "no-duplicate-variable": true,
        "no-duplicate-imports": true,
        "max-classes-per-file": [true, 1],
        "trailing-comma": [true, {
            "multiline": "never",
            "singleline": "never"
        }],
        "no-irregular-whitespace": true,

        "prefer-const": true,
        "prefer-readonly": true,
        "quotemark": [
            true,
            "single"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "translate_tabs_to_spaces": true,
        "trim_trailing_white_space_on_save": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "typedef": [
            true, "parameter", "member-variable-declaration", "variable-declaration"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format"
        ],
        "no-consecutive-blank-lines": [true, 1],
        "whitespace": [
            true,
            "check-branch",
            "check-preblock",
            "check-typecast",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ],
        "lint_mode": "save only"
    },
    "rulesDirectory": []
}